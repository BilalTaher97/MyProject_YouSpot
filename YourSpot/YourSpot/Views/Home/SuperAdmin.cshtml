@model YourSpot.Models.User

@{
    Layout = "~/Views/Shared/_SuperAdmin.cshtml";
}


@section Style {

    <link rel="stylesheet" href="~/css/FormStyle.css" asp-append-version="true" />

}

<div class="container">
    <div class="header">
        <h1>Admin Information</h1>

        <div class="wave" style="width:0;"></div>
    </div>

    <div class="form-container">
        <form id="editProfileForm" asp-action="HandelSuperAdmin" asp-controller="Home" method="post">

            <input type="hidden" value="@Model.Id" name="Id" />
            <div class="form-row">
                <div class="form-column">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <div class="icon-input">
                            <i class="fas fa-user"></i>
                            <input type="text" id="name" class="form-control" name="Name" value="@Model.Name" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <div class="icon-input">
                            <i class="fas fa-envelope"></i>
                            <input type="email" id="email" class="form-control" name="Email" value="@Model.Email" readonly required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <div class="icon-input">
                            <i class="fas fa-phone"></i>
                            <input type="tel" id="phone" class="form-control" name="Phone" value="@Model.Phone" required>
                        </div>
                    </div>

                   

                </div>


            </div>



            <div class="actions">

                <button type="submit" class="btn_Form" style="margin-right:10px;">
                    <i class="fas fa-save"></i> Save Changes
                </button>



            </div>
        </form>
    </div>
</div>

