<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="/css/NewPasswordStyle.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Create New Password</h1>
        <form id="passwordForm" asp-action="HandelNewPassword" method="post">
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm New Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="btn">Change Password</button>
            <a href="/User/Log_Reg" class="btn return-btn">Sign In</a>
            @if (ViewData["MSG"] != "The password has been changed successfully."){

                <p style="color:red">@ViewData["MSG"]</p>
            }
            else
            {
                <p style="color:green">@ViewData["MSG"]</p>
            }
        </form>
    </div>
</body>
</html>

