@model IEnumerable<YourSpot.Models.PhotographerViewModel>

@section Style {
	<link rel="stylesheet" href="/css/Photography.css" asp-append-version="true" />
}

<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<h1 class="display-4">Find the best photographer</h1>
		<p class="Text-Hero">Choose the right photographer for your event with the best price and minimal effort.</p>
	</div>
</div>

<div class="A3-Cards">
	@foreach (var item in Model)
	{
		if (item.Status == "Accepted")
		{
			<div class="card">
				<div class="card-image">
					<img src="@(string.IsNullOrEmpty(item.FirstImagePath) ? "/images/default-photographer.jpg" : item.FirstImagePath)" alt="@item.Name">
				</div>
				<p class="card-title">@item.Name</p>
				<p class="card-title">$@item.Price min spend</p>
				<p class="card-body">One of our best photographers</p>
				<a asp-action="Details_Phtotography" asp-controller="Transactions" asp-route-id="@item.Id" asp-route-type="Photogeapher">
					<button class="btn_Click">
						<span class="transition"></span>
						<span class="gradient"></span>

						<span class="label">Show Details</span>

					</button>
				</a>
			</div>
		}
	}
</div>



<section class="registration-section">
	<div class="registration-container">
		<div class="registration-circle registration-circle-1"></div>
		<div class="registration-content">
			<h2 class="registration-title">Join our family now</h2>
			<h3 class="registration-subtitle">Register Now!</h3>
			<a asp-action="Reg_Photography" asp-controller="Events" class="registration-btn">Register Now</a>
		</div>
		<div class="registration-icon"></div>
		<div class="registration-circle registration-circle-2"></div>
	</div>
</section>
